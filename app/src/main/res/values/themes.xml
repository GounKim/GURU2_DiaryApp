<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.GURU2_DiaryApp" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Primary brand color. -->
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/brown_2</item>
        <item name="colorPrimaryDark">@color/brown_4</item>
        <item name="colorAccent">@color/brown_5</item>
        <item name="backgroundColor">#FCFCFC</item>
        <item name="cardbackground">#FFFFFF</item>
        <item name="android:textColor">@color/black</item>
        <!--item name="android:tint">#FFFFFF</item-->
        <item name="android:buttonTint">@color/brown_4</item>
        <item name="navibackground">#FFFFFF</item>
        <item name="navitint">#000000</item>
        <item name="android:textViewStyle">@style/customTextViewFontStyle</item>
        <item name="android:buttonStyle">@style/customButtonFontStyle</item>
        <item name="android:editTextStyle">@style/customEditTextFontStyle</item>
        <item name="itemTextAppearance">@style/nav_categoryFontStyle</item> <!--메뉴 폰트-->
        <!-- Customize your theme here. -->
    </style>

    <!-- intro theme. -->
    <style name="IntroTheme" parent="Theme.MaterialComponents.NoActionBar">

        <item name="android:windowBackground">@drawable/intro_background</item>
        <item name="android:windowFullscreen">true</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="Theme.App.Small" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="mainTextSize">@dimen/main_text_size_0</item> </style>
    <style name="Theme.App.Medium" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="mainTextSize">@dimen/main_text_size_1</item> </style>
    <style name="Theme.App.Large" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="mainTextSize">@dimen/main_text_size_2</item> </style>

</resources>