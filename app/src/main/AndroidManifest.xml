<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.guru2_diaryapp">
    <!-- 카메라 권한 설정 -->
    <uses-permission android:name="android.permission.CAMERA" /> <!-- 저장 권한 설정 -->
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" /> <!-- 카메라 기능이 무조건 필요하지 않을 경우 -->
    <uses-feature
        android:name="android.hardware.camera2"
        android:required="false" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.GURU2_DiaryApp">
        <activity android:name=".MainBottomSheetDialog"></activity>
        <activity android:name=".LoginActivity" /> <!-- Intro -->
        <activity
            android:name=".IntroActivity"
            android:theme="@style/IntroTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".category.CategoryActivity" />
        <activity android:name=".Tracker" />
        <activity android:name=".SelectResultActivity" />
        <activity android:name=".SelectActivity" />
        <activity android:name=".MainTimelineView" />
        <activity android:name=".diaryView.DiaryView" />
        <activity
            android:name=".diaryView.DiaryViewEdit"
            android:parentActivityName=".diaryView.DiaryView" />
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>